%h1= t Appointment.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Appointment.human_attribute_name(:doctor)
      %th= Appointment.human_attribute_name(:patient)
      %th= Appointment.human_attribute_name(:appointment_date)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @appointments.each do |appointment|
      %tr
        %td= appointment.doctor.name
        %td= appointment.patient.name
        %td= appointment.appointment_date
        %td= render 'admin/shared/index_buttons', resource: appointment
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_appointment_path, class: 'btn btn-primary btn-sm'
