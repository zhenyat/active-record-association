%h1= t Patient.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Patient.human_attribute_name(:name)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @patients.each do |patient|
      %tr
        %td= patient.name
        %td= render 'admin/shared/index_buttons', resource: patient
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_patient_path, class: 'btn btn-primary btn-sm'
